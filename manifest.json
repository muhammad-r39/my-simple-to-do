{
  "manifest_version": 3,
  "name": "Simple Todo + Note",
  "version": "1.0.0",
  "description": "A lightweight popup for todos and notes with optional floating widget.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16.png", "icons/icon48.png", "icons/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
